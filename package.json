{
  "name": "@soonfx/engine",
  "version": "2.0.0",
  "description": "TypeScript-first game numeric engine for RPG and strategy games - formula parsing, battle simulation, zero dependencies",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "pack": "npm pack",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "docs:dev": "vitepress dev site",
    "docs:build": "vitepress build site",
    "docs:preview": "vitepress preview site"
  },
  "keywords": [
    "game-engine",
    "typescript",
    "rpg",
    "strategy-game",
    "turn-based",
    "formula-engine",
    "expression-parser",
    "battle-system",
    "damage-calculation",
    "numerical-computation",
    "zero-dependency",
    "game-math",
    "character-attributes"
  ],
  "author": "SoonFx Team <jiyisoon@163.com> (https://soonfx.dev)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soonfx-engine/core.git"
  },
  "bugs": {
    "url": "https://github.com/soonfx-engine/core/issues"
  },
  "homepage": "https://soonfx.dev",
  "engines": {
    "node": ">=14.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0",
    "vue": "^3.5.25"
  }
}
